{
  "name": "filehound",
  "version": "1.9.0",
  "description": "Fluent interface for finding files",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./src",
    "coverage": "istanbul cover _mocha -- -R dot",
    "compile": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run compile",
    "test": "npm run compile && mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nspragg/filehound.git"
  },
  "keywords": [
    "file",
    "recursive",
    "search",
    "filehound",
    "file",
    "hound",
    "lister",
    "find",
    "directory",
    "walk",
    "walker",
    "promise",
    "finder",
    "fs"
  ],
  "author": "nspragg@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nspragg/filehound/issues"
  },
  "homepage": "https://github.com/nspragg/filehound",
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "coveralls": "^2.11.8",
    "eslint": "^2.7.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.3.0",
    "sinon": "^1.17.4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ],
      "eqeqeq": 2,
      "no-var": 2,
      "one-var": [
        2,
        "never"
      ],
      "prefer-const": 2,
      "semi": 2,
      "strict": [
        2,
        "global"
      ],
      "arrow-parens": 2,
      "prefer-arrow-callback": 2
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.7.4",
    "bluebird": "^3.3.3",
    "lodash": "^4.6.1",
    "minimatch": "^3.0.0",
    "moment": "^2.12.0"
  }
}
