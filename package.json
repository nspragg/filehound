{
  "name": "filehound",
  "version": "2.0.0",
  "description": "Find files the easy way",
  "main": "dist/index.js",
  "scripts": {
    "jsdoc": "jsdoc -c ./docconfig/jsdoc.json",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -fr dist/*",
    "prepublish": "npm run build",
    "prepublishOnly": "tsc -p ./ --outDir dist",
    "test": "mocha -r ts-node/register test/*.ts",
    "posttest": "npm run lint",
    "lint": "tslint --project tsconfig.json",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nspragg/filehound.git"
  },
  "keywords": [
    "file",
    "recursive",
    "search",
    "filehound",
    "file",
    "hound",
    "lister",
    "find",
    "directory",
    "walk",
    "walker",
    "promise",
    "finder",
    "fs",
    "file system"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nspragg/filehound/issues"
  },
  "homepage": "https://github.com/nspragg/filehound",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "unit-compare": "^1.0.1",
    "minimatch": "^3.0.3"
  },
  "devDependencies": {
    "@types/mocha": "ts2.6",
    "@types/node": "^14.0.1",
    "chai": "^4.1.2",
    "eslint": "^3.11.1",
    "eslint-config-iplayer-base": "^1.0.0",
    "istanbul": "1.1.0-alpha.1",
    "jsdoc": "^3.4.3",
    "mocha": "^5.0.5",
    "moment": "^2.25.3",
    "sinon": "^4.5.0",
    "ts-node": "^8.10.1",
    "tslint": "^5.8.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.9.2"
  }
}
